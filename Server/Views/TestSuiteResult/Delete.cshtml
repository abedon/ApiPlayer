@model AutoTest.Common.TestSuiteResult

@{
    ViewBag.Title = "Delete the selected test suite result";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Test Suite Result @Html.DisplayFor(model => model.ID)</legend>

    <div class="display-label">Test Suite ID: </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TestSuiteID)
    </div>

    <div class="display-label">Tester IP: </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TesterIP)
    </div>

    <div class="display-label">Start Time: </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.StartTime)
    </div>

    <div class="display-label">End Time: </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EndTime)
    </div>

    <div class="display-label">Total Time: </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TotalTime) ms
    </div>

    <div class="display-label">Average Time:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AverageTime) ms
    </div>

    <div class="display-label">Longest Time:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LongestTime) ms
    </div>

    <div class="display-label">Shortest Time:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ShortestTime) ms
    </div>
</fieldset>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to Test Suite Result List", "Index")
    </p>
}
